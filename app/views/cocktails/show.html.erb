<h1>Cocktail you're searching for #show</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <table class="table table-bordered">
        <div class="row">
          <div class="col-md-12">
            <p><%= link_to "Back to Cocktails", cocktails_path %></p>
            <p><%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %></p>
          </div>
        </div>
        <% @doses.each do |dose| %>
      <p><%= dose.description %></p>
      <p><%= link_to "Delete Dose", dose_path(dose), method: :delete %></p>
    <% end %>
      </table>
    </div>
  </div>
</div>
