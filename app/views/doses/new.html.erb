<h1>Doses#new</h1>

  <div class="row">
    <div class="col-md-12">
      <h2> Add a new dose </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
